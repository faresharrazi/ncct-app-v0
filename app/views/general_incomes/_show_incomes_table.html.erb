
    <table class="table table-sm table-striped align-middle">
      <thead class="table-light">
        <tr>
          <th scope="col" class="text-center">Date</th>
          <th scope="col">Name</th>
          <th scope="col" class="text-center">Amount</th>
          <th scope="col">Type</th>
          <th scope="col" class="text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @general_incomes.each do |income| %>
          <tr>
            <td class="text-center text-truncate" title="<%= income.created_at.strftime('%b %d, %Y') %>">
              <%= income.created_at.strftime("%b %d, %Y") %>
            </td>
            <td class="text-truncate" title="<%= income.title %>">
              <%= income.title %>
            </td>
            <td class="text-center text-truncate">
              <%= number_with_precision(income.amount, precision: 2) %>
            </td>
            <td class="text-success text-truncate">Income</td>
            <td class="text-center">
              <div class="d-flex justify-content-center gap-1">
                <%= link_to "Edit", edit_general_income_path(income), class: "btn btn-sm btn-outline-primary btn-width" %>
                <%= button_to "Delete", general_income_path(income), method: :delete, class: "btn btn-sm btn-outline-danger btn-width", data: { turbo_confirm: "Are you sure you want to delete this income?" } %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>

<style>
  #general-incomes {
    font-size: 0.85rem;
  }

  .table {
    border-radius: 5px;
    overflow: hidden;
  }

  .table th, .table td {
    padding: 0.5rem;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .table-sm th, .table-sm td {
    padding: 0.4rem;
  }

  .table-striped tbody tr:nth-of-type(odd) {
    background-color: #f9f9f9;
  }

  .table-light {
    background-color: #f8f9fa;
  }

  .btn-outline-primary, .btn-outline-danger {
    font-size: 0.75rem;
    padding: 0.3rem 0.8rem;
  }

  .btn-width {
    width: 70px; /* Ensures consistent button width */
  }

  .text-truncate {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
</style>
