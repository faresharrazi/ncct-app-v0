<div class="row mb-4 g-2 justify-content-center">
  <% @accounts.each do |account| %>
    <div class="col-md-2">
      <%= link_to account_path(account), class: "text-decoration-none card-hover" do %>
        <div class="card text-center shadow-sm" style="font-size: 0.9rem;">
          <div class="card-body p-3">
            <h6 class="card-title text-info"><%= account.title %></h6>
            <p class="card-text mb-2">
              <%= account.balance %>â‚¬
            </p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<style>
  .card-hover {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: block;
  }

  .card-hover:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }
</style>


