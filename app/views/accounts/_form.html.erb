<div class="row justify-content-center mt-4"> 
  <div class="col-md-6">
    <%= form_with(model: account, local: true, class: "needs-validation") do |form| %>
      <% if account.errors.any? %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <h4><%= pluralize(account.errors.count, "error") %> prohibited this account from being saved:</h4>
          <ul>
            <% account.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <!-- Title Field -->
      <div class="mb-3">
        <%= form.label :title, "Account Title", class: "form-label" %>
        <%= form.text_field :title, class: "form-control", placeholder: "Enter Account Title" %>
      </div>

      <!-- Hidden Balance Field -->
      <%= form.hidden_field :balance, value: 0 %>

      <!-- Percentage Field -->
      <div class="mb-3">
        <label class="form-label" for="account_percentage">Percentage</label>
        <div class="input-group">
          <%= form.number_field :percentage, class: "form-control", placeholder: "Enter Percentage" %>
          <span class="input-group-text">%</span>
        </div>
      </div>

      <!-- Hidden General Account ID -->
      <%= form.hidden_field :general_account_id, value: 1 %>

      <!-- Submit Button -->
      <div class="d-grid">
        <%= form.submit "Create Account", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
