<div id="transactions">
  <% if @transactions.any? %>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Date</th>
          <th scope="col">Name</th>
          <th scope="col">Amount (€)</th>
          <th scope="col">Account</th>
          <th scope="col">Category</th>
          <th scope="col" class="text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @transactions.each do |transaction| %>
          <tr>
            <td><%= transaction.date.strftime("%Y-%m-%d %H:%M") %></td>
            <td><%= transaction.name %></td>
            <td><%= transaction.amount %>€</td>
            <td><%= transaction.account&.title || "Account not found" %></td>
            <td><%= transaction.category&.name || "Category not found" %></td>
            <td class="text-center">
              <div class="d-flex justify-content-center">
                <%= link_to "Edit", edit_transaction_path(transaction), class: "btn btn-sm btn-outline-primary me-2" %>
                <%= button_to "Delete", transaction_path(transaction), method: :delete, class: "btn btn-sm btn-outline-danger", data: { turbo_confirm: "Are you sure you want to delete this transaction?" } %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-center text-muted fs-5">
      No transactions available. Please create one to get started.
    </p>
  <% end %>
</div>
