<%= link_to "Cancel", edit_account_path(@account), class: "btn btn-light" %>
<div class="row justify-content-center mt-4">
  <!-- Account Form -->
  <div class="col-md-3">
    <h5>Account Details</h5>
    <%= form_with(model: @account, local: true) do |form| %>
      <%= form.text_field :title, class: "form-control mb-3", placeholder: "Account Title", disabled: true %>
      <%= form.number_field :balance, class: "form-control mb-3", placeholder: "Balance (â‚¬)", disabled: true %>
      <%= form.submit "Update Account", class: "btn btn-primary mb-2 w-100", disabled: true %>
    <% end %>
    <%= button_to "Delete Account", @account, 
                  method: :delete, 
                  data: { turbo_confirm: "Are you sure you want to delete this account?" }, 
                  class: "btn btn-danger w-100", disabled: true %>
  </div>

  <!-- Category Update Form -->
  <div class="col-md-3">
    <h5>Update Category</h5>
    <%= form_with(model: @category, local: true) do |form| %>
      <div class="row g-3 align-items-center mb-3">
        <div class="col">
          <%= form.text_field :name, class: "form-control", placeholder: "Category name" %>
        </div>
        <div class="col-auto">
          <%= form.submit "Update Category", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
